import java.util.Scanner;

public class RecordAddressCalculator {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.println("=== Record Address Calculation (Individual Elements) ===");

        // Accept user input
        System.out.print("Enter the base address (B) of the array/record: ");
        int baseAddress = sc.nextInt();

        System.out.print("Enter the size (S) of each element in bytes: ");
        int elementSize = sc.nextInt();

        System.out.print("Enter the total number of elements (N): ");
        int numElements = sc.nextInt();

        // Display total number of elements
        System.out.println("Total number of elements: " + numElements);

        // Ask user which element's address to calculate
        System.out.print("Enter the index (i) of the element to calculate its address (0 to " + (numElements - 1) + "): ");
        int elementIndex = sc.nextInt();

        // Validate index
        if (elementIndex < 0 || elementIndex >= numElements) {
            System.out.println("Error: Index out of bounds!");
            sc.close();
            return;
        }

        // Dynamically derive the formula: Address = Base + (Index * Size)
        int address = baseAddress + (elementIndex * elementSize);

        // Display the computed address
        System.out.println("The address of element at index " + elementIndex + " is: " + address);

        sc.close();
    }
}
