import java.util.Scanner;

public class RecordAddressCalculator {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter total number of Records in the array: ");
        int numRecords = sc.nextInt();

        System.out.print("Enter number of Fields per record: ");
        int numFields = sc.nextInt();

        int[] fieldSizes = new int[numFields];
        int recordSize = 0;

        for (int i = 0; i < numFields; i++) {
            System.out.print("Enter size of Field " + (i + 1) + " (in bytes): ");
            fieldSizes[i] = sc.nextInt();
            recordSize += fieldSizes[i];
        }

        System.out.print("\nEnter Base Address of the Record Array: ");
        int baseAddress = sc.nextInt();

        System.out.print("Enter the Record Index to search (0 to " + (numRecords - 1) + "): ");
        int targetRecord = sc.nextInt();

        System.out.print("Enter the Field Index to locate (1 to " + numFields + "): ");
        int targetField = sc.nextInt();

        // Formula: Base + (RecordIndex * TotalRecordSize) + Sum(Sizes of preceding fields)
        int fieldOffset = 0;
        for (int i = 0; i < targetField - 1; i++) {
            fieldOffset += fieldSizes[i];
        }

        int finalAddress = baseAddress + (targetRecord * recordSize) + fieldOffset;

        System.out.println("\n--- Results ---");
        System.out.println("Size of one Record: " + recordSize + " bytes");
        System.out.println("Total Elements (Records): " + numRecords);
        System.out.println("Address of Record " + targetRecord + ", Field " + targetField + ": " + finalAddress);
    }
}
